<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="com.company.EmployeeManagementController">
    <TableView fx:id="employeeTable">
        <columns>
            <TableColumn fx:id="employeeIdColumn" text="Employee ID"/>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="roleColumn" text="Role"/>
        </columns>
    </TableView>
    <Button text="Add Employee" onAction="#handleAddEmployee"/>
</VBox>
