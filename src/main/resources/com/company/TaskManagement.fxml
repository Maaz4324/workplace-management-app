<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="com.company.TaskManagementController">
    <TableView fx:id="taskTable">
        <columns>
            <TableColumn fx:id="taskIdColumn" text="Task ID"/>
            <TableColumn fx:id="descriptionColumn" text="Description"/>
            <TableColumn fx:id="statusColumn" text="Status"/>
        </columns>
    </TableView>
    <Button text="Create Task" onAction="#handleCreateTask"/>
    <Button text="Assign Task" onAction="#handleAssignTask"/>
</VBox>
